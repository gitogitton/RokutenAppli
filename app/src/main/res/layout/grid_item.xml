<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_apl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/grid_item_desc"
        android:scaleType="center"
        android:src="@mipmap/icon_mycat_01_small"/>

    <TextView
        android:id="@+id/text_apl_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/temporary_textstring"
        app:layout_constraintTop_toBottomOf="@id/image_apl" />

</android.support.constraint.ConstraintLayout>